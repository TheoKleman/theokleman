<div class="slider-controls">
    <div class="previous-project">
        <div class="icon">
            <div class="icon-wrapper">
                <svg version="1.1" id="Calque_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 21.1 16.5" style="enable-background:new 0 0 21.1 16.5;" xml:space="preserve">
                    <style type="text/css">
                        .st0{fill:#FF8A66;}
                    </style>
                    <polygon class="st0" points="21,6 8,6 11.2,2.8 8.3,-0.1 0,8.2 8.3,16.5 11.2,13.5 8,10 21,10 "/>
                </svg>
            </div>
        </div>
        <div class="text">
            {{#each projects}}
                <div class="text-inner">
                    <span class="number">#{{key}}</span>
                    <span class="title">{{title}}</span>
                </div>
            {{/each}}
        </div>
    </div>

    <nav class="selectors">
        <ul>
        {{#each projects}}
                <li data-item="{{id}}" class="{{#ifCond key key }}current{{/ifCond}}">
                    <span class="title">{{shortTitle}}</span>
                    <span class="bar"></span>
                </li>
        {{/each}}
        </ul>
    </nav>

    <div class="next-project">
        <div class="icon">
            <div class="icon-wrapper">
                <svg version="1.1" id="Calque_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 21.1 16.5" style="enable-background:new 0 0 21.1 16.5;" xml:space="preserve">
                    <style type="text/css">
                        .st0{fill:#FF8A66;}
                    </style>
                    <polygon class="st0" points="12.8,0 9.8,2.9 13.1,6 0,6 0,10 13.1,10 9.8,13.5 12.8,16.5 21.1,8.3 "/>
                </svg>
            </div>
        </div>
        <div class="text">
            {{#each projects}}
                <div class="text-inner">
                    <span class="number">#{{key}}</span>
                    <span class="title">{{title}}</span>
                </div>
            {{/each}}
        </div>
    </div>
</div>            

